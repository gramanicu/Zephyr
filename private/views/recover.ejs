<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Account Recovery</title>
    <link rel="icon" href="../static/images/logo/icon.png" type="image/x-icon" />
</head>

<body class="bg-light">
    <div class="container" id="containerFull">
        <div class="row" id="containerFull"></div>
            <div class="col align-self-center" id="signinForm">              
                    <% if (messages=="Password reset token is invalid or has expired.") { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                Password reset token is invalid or has expired.
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %>
                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= success %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %>
                <img src="../static/images/logo/darklogo.png" width="60px" height="60px" class="mx-auto d-block" style="margin-bottom: 16px; border-radius: 50%">
                <p class="h3 text-center" style="margin-bottom: 16px">Find your account</p>
                <form class="form-signin" method="POST" action="/recover">
                    <div class="form-group">
                        <label for="emailInput">Email adress</label>
                        <input type="email" class="form-control" name="email" id="emailInput" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Recover password</button>
                </form>
            </div>
        </div>
    </div>
</body>



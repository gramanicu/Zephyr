<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Log in to Zephyr</title>
    <link rel="icon" href="../static/images/logo/icon.png" type="image/x-icon" />
</head>

<body class="bg-light">
    <div class="container" id="containerFull">
        <div class="row" id="containerFull"></div>
        <div class="col align-self-center" id="signinForm">
            <img src="../static/images/logo/darklogo.png" width="60px" height="60px" class="mx-auto d-block" style="margin-bottom: 16px; border-radius: 50%">
            <p class="h3 text-center" style="margin-bottom: 16px">Choose a new password</p>
            <form class="form-signin" method="POST">
                <div class="form-group">
                    <label for="passwordInput">New Password</label>
                    <%
                            var eroare = false; 
                            if(errors) {
                                errors.forEach(function(error)
                                { if(error=="notsame") eroare=true ;})
                             } 
                             if(eroare) {
                            %>
                    <input type="password" class="form-control is-invalid" name="password" id="passwordInput" placeholder="New password" required>
                    <% } else {
                            var eroare = false; 
                            if(errors) {
                                errors.forEach(function(error)
                                { if(error=="password") eroare=true ;})
                             } 
                             if(eroare) {
                            %>
                    <input type="password" class="form-control is-invalid" name="password" id="passwordInput" placeholder="New password" required>
                    <div class="invalid-feedback">
                        Password not long enough!
                    </div>
                    <% }else{ %>
                    <input type="password" class="form-control" name="password" id="passwordInput" placeholder="New password" required>
                    <% } }%>
                    
                    <small id="passwordHelp" class="form-text text-muted">Must have at least 6 characters</small>
                </div>
                <div class="form-group">
                        <label for="retypeInput">Confirm Password</label>
                        <%
                            var eroare = false; 
                            if(errors) {
                                errors.forEach(function(error)
                                { if(error=="notsame") eroare=true ;})
                             } 
                             if(eroare) {
                            %>
                            <input type="password" class="form-control is-invalid"  name="retype" id="retypeInput" placeholder="Confirm password" required>
                    <div class="invalid-feedback">
                        These passwords do not match! Try again!
                    </div>
                    <% }else{ %>
                    <input type="password" class="form-control" name="retype" id="retypeInput" placeholder="Confirm password" required>
                    <% } %>
                    </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Update password</button>
            </form>
        </div>
    </div>
    </div>
</body>


